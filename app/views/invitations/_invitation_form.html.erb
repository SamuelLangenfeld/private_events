<% if current_user.hosted_events.include? @event %>
   <%= form_for @invitation do |f| %>
    <%= f.label :attendee_name, 'Invite a User: ' %>
    <%= f.text_field :attendee_name, placeholder: "Enter their name" %>
    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.submit %>
  <% end %>
<% end %>